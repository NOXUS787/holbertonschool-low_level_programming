#include "main.h"
#include <stdio.h>
#include <stdlib.h>

/**
 * print_grid - prints a grid of integers
 * @grid: the 2 dimensional array
 * @width: width of the grid
 * @height: height of the grid
 */
void print_grid(int **grid, int width, int height)
{
    int i, j;

    for (i = 0; i < height; i++)
    {
        for (j = 0; j < width; j++)
            printf("%d ", grid[i][j]);
        printf("\n");
    }
}

/**
 * main - check the code for free_grid
 *
 * Return: Always 0
 */
int main(void)
{
    int **grid;

    grid = alloc_grid(6, 4);
    if (grid == NULL)
        return (1);

    print_grid(grid, 6, 4);
    printf("\n");

    grid[0][3] = 98;
    grid[3][4] = 402;

    print_grid(grid, 6, 4);

    free_grid(grid, 4);

    return (0);
}
